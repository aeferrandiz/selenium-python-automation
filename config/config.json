{
    "browser": "chrome",
    "headless": false,
    "window_size": {
        "width": 1920,
        "height": 1080
    },
    "reports_path": "./reports",
    "timeouts": {
        "implicit_wait": 10,
        "script_timeout": 10,
        "page_load_timeout": 30
    },
    "screenshots": {
        "take_on_failure": true,
        "path": "./reports/screenshots"
    }
}